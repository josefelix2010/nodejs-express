extends ../layout

block content

	h2 Nuevo Usuario

	br

	form(action='/usuarios/create' method='post')
		.form-group
			label(for='nombre') Nombre
			input#nombre.form-control(type='text' name='nombre' value=usuario.nombre class=errors.nombre ? 'is-invalid' : '')
			if errors.nombre
				small#nombreHelp.text-danger 
					= errors.nombre.message

		.form-group
			label(for='email') Email
			input#email.form-control(type='text' name='email' value=usuario.email class=errors.email ? 'is-invalid' : '')
			if errors.email
				small#emailHelp.text-danger 
					= errors.email.message

		.form-group
			label(for='password') Contraseña
			input#password.form-control(type='password' name='password' value=usuario.password class=errors.password ? 'is-invalid' : '')
			if errors.password
				small#passwordHelp.text-danger 
					= errors.password.message

		.form-group
			label(for='confirmPassword') Confirmar Contraseña
			input#confirmPassword.form-control(type='password' name='confirmPassword' value=usuario.confirmPassword class=errors.confirmPassword ? 'is-invalid' : '')
			if errors.confirmPassword
				small#confirmPasswordHelp.text-danger 
					= errors.confirmPassword.message
				
		a(href='/usuarios').btn.button.volver Volver

		input.btn.btn-success(type='submit' value='Crear').button
