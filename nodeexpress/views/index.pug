extends layout

block content
  // Navigation
  nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top
    .container
      a.navbar-brand.js-scroll-trigger(href='#page-top')
      button.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
        | Menu
        i.fas.fa-bars
      #navbarResponsive.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link.js-scroll-trigger(href='#inicio') Inicio
          li.nav-item
            a.nav-link.js-scroll-trigger(href='#bicicletas') Bicicletas
          li.nav-item
            a.nav-link.js-scroll-trigger(href='#contacto') Contactos

  // Header
  header.masthead
    .container.d-flex.h-100.align-items-center
      .mx-auto.text-center
        h1.mx-auto.my-0.text-uppercase Red de Bicicletas
        h2.text-white-50.mx-auto.mt-2.mb-5 Primera red de ciclistas urbanos.
        a.btn.btn-primary.js-scroll-trigger(href='#inicio') Empezar

  // About Section
  section#inicio.about-section.text-center
    .container
      .row
        .col-lg-8.mx-auto
          h2.text-white.mb-4 Red de Bicicletas
          p.text-white-50
            | Esta es una red de bicicletas de prueba.
      img.img-fluid(src='img/ipad.png' alt='')

  // Projects Section
  section#bicicletas.projects-section.bg-light
    .container
      #main-map
  
  // Signup Section
  section#contacto.signup-section
    .container
      .row
        .col-md-10.col-lg-8.mx-auto.text-center
          i.far.fa-paper-plane.fa-2x.mb-2.text-white
          h2.text-white.mb-5 Subscríbete para recibir actualizaciones!
          form.form-inline.d-flex
            input#inputEmail.form-control.flex-fill.mr-0.mr-sm-2.mb-3.mb-sm-0(type='email' placeholder='Ingrese una dirección de correo electrónico...')
            button.btn.btn-primary.mx-auto(type='submit') Subscribirse
      .row
        img.img-fluid(src='img/bg-masthead.png' alt='')
  
  // Contact Section
  section.contact-section.bg-black
    .container
      .row
        .col-md-4.mb-3.mb-md-0
          .card.py-4.h-100
            .card-body.text-center
              i.fas.fa-map-marked-alt.text-primary.mb-2
              h4.text-uppercase.m-0 Dirección
              hr.my-4
              .small.text-black-50 Urb. Paso Real, San Diego, Carabobo
        .col-md-4.mb-3.mb-md-0
          .card.py-4.h-100
            .card-body.text-center
              i.fas.fa-envelope.text-primary.mb-2
              h4.text-uppercase.m-0 Correo Electrónico
              hr.my-4
              .small.text-black-50
                a(href='#') red@bicicletas.com
        .col-md-4.mb-3.mb-md-0
          .card.py-4.h-100
            .card-body.text-center
              i.fas.fa-mobile-alt.text-primary.mb-2
              h4.text-uppercase.m-0 Teléfono
              hr.my-4
              .small.text-black-50 +58 424-453-6884
      .social.d-flex.justify-content-center
        a.mx-2(href='#')
          i.fab.fa-twitter
        a.mx-2(href='#')
          i.fab.fa-facebook-f
        a.mx-2(href='#')
          i.fab.fa-github
  
  // Footer
  footer.bg-black.small.text-center.text-white-50
    .container
      | Copyright &copy; José Chaparro 2020
  
  // Bootstrap core JavaScript
  script(src='/vendor/jquery/jquery.min.js')
  script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
  
  // Plugin JavaScript
  script(src='/vendor/jquery-easing/jquery.easing.min.js')
  
  // Custom scripts for this template
  script(src='/javascripts/grayscale.min.js')
  script(src='/javascripts/map.js')
